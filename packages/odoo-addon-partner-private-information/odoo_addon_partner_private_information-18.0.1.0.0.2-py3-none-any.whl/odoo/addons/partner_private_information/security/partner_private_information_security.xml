<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="group_partner_private_info" model="res.groups">
        <field name="name">Show partner private info</field>
        <field name="category_id" ref="base.module_category_usability" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>
    <record id="rule_hide_private_partner_categories" model="ir.rule">
        <field name="name">Hide private partner categories</field>
        <field name="model_id" ref="base.model_res_partner_category" />
        <field name="domain_force">[('is_private', '=', False)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]" />
    </record>
    <record id="rule_show_all_private_partner_categories" model="ir.rule">
        <field name="name">Show all private partner categories</field>
        <field name="model_id" ref="base.model_res_partner_category" />
        <field
            name="groups"
            eval="[(4, ref('partner_private_information.group_partner_private_info'))]"
        />
        <field name="domain_force">[('is_private', 'in', (False,True))]</field>
    </record>
</odoo>
