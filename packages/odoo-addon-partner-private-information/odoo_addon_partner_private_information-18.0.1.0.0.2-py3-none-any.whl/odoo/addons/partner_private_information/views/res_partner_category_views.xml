<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_category_form_inherit_private_flag" model="ir.ui.view">
        <field name="name">res.partner.category.form.inherit.private.flag</field>
        <field name="model">res.partner.category</field>
        <field name="inherit_id" ref="base.view_partner_category_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field
                    name="is_private"
                    groups="partner_private_information.group_partner_private_info"
                />
            </xpath>
        </field>
    </record>
    <record id="view_partner_category_list_inherit_private_flag" model="ir.ui.view">
        <field name="name">res.partner.category.list.inherit.private.flag</field>
        <field name="model">res.partner.category</field>
        <field name="inherit_id" ref="base.view_partner_category_list" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field
                    name="is_private"
                    groups="partner_private_information.group_partner_private_info"
                />
            </xpath>
        </field>
    </record>
</odoo>
