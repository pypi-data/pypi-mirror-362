{
  "name": "cafe_post",
  "description": "Enhanced product advertisement template for the products",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/6587e6f7-b2fb-4871-919d-4174681a84d3.png",
      "tint": {
        "type": "linear",
        "colors": [
          [1, 1, 1, 0.1],
          [1, 1, 1, 1]
        ],
        "opacity": 0.3
      },
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 }
    },
    {
      "type": "text",
      "text": "${business_name}",
      "position": { "x": 0, "y": 0 },
      "font_size": 120,
      "color": [255, 255, 255, 1],
      "font_path": "CormorantGaramond-Bold",
      "alignment": "center",
      "max_width": 1080
    },
    {
      "type": "text",
      "text": "${product_tagline}",
      "position": { "x": 60, "y": 160 },
      "font_size": 70,
      "color": [255, 255, 255, 1],
      "font_path": "Poppins-Light",
      "alignment": "center",
      "max_width": 960,
      "line_height": 1.2
    },
    {
      "type": "text",
      "text": "${social_handle}",
      "position": { "x": 0, "y": 1030 },
      "font_size": 30,
      "color": [255, 255, 255, 1.0],
      "font_path": "Montserrat-Medium",
      "line_spacing": 1.3,
      "max_width": 1050,
      "alignment": "right"
    }
  ]
}
