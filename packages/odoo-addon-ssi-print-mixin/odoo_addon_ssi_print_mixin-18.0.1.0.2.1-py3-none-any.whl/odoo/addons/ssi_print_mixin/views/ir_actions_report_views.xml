<odoo>
    <record id="ir_actions_report_view_form" model="ir.ui.view">
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="base.act_report_xml_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page name="page_print_policy" string="Print Policy">
                        <group>
                            <field
                                name="print_document_type_ids"
                                widget="many2many_tags"
                            />
                            <field name="print_multi" />
                        </group>
                        <group name="grp_print_policy" colspan="4">
                            <field name="print_python_code" colspan="2" widget="ace" />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
