<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="status_check_page">
        <page name="page_status_check" string="Status Checks">
            <group
                name="grp_status_check_1"
                colspan="4"
                col="2"
                groups="base.group_system"
            >
                <field name="status_check_template_id" />
            </group>
            <button
                name="action_reload_status_check_template"
                string="Status Check Template"
                type="object"
                icon="fa-refresh"
                class="oe_highlight"
                style="margin-right:4px"
                groups="base.group_system"
            />
            <button
                name="action_reload_status_check"
                string="Status Check Item"
                type="object"
                icon="fa-refresh"
                class="oe_highlight"
                groups="base.group_system"
            />
            <field name="status_check_ids" nolabel="1" force_save="1" />
        </page>
    </template>
</odoo>
