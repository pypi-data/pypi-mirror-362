<odoo>
    <record id="dev_model_type_view_search" model="ir.ui.view">
        <field name="name">dev.model.type.search</field>
        <field name="model">dev.model.type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="dev_model_type_view_list" model="ir.ui.view">
        <field name="name">dev.model.type.list</field>
        <field name="model">dev.model.type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_list"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="dev_model_type_view_form" model="ir.ui.view">
        <field name="name">dev.model.type.form</field>
        <field name="model">dev.model.type</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="value" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="dev_model_type_action" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">dev.model.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_dev_model_type"
        parent="menu_test_ssi_mixin"
        action="dev_model_type_action"
    />
</odoo>
