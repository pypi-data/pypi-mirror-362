{
	"_id": {
		"__type__": "tuuid",
		"__optional__": true
	},

	"_created": {
		"__type__": "timestamp",
		"__optional__": true
	},

	"_updated": {
		"__type__": "timestamp",
		"__optional__": true
	},

	"email": {
		"__type__": "string",
		"__maximum__": 127
	},

	"passwd": {
		"__type__":"string",
		"__regex__":"^[0-9a-fA-F]{72}$"
	},

	"locale": {
		"__type__": "string",
		"__regex__": "^[a-z]{2}-[A-Z]{2}$"
	},

	"first_name": {
		"__type__": "string",
		"__minumum__": 1,
		"__maximum__": 31
	},

	"last_name": {
		"__type__": "string",
		"__minumum__": 2,
		"__maximum__": 31
	},

	"title": {
		"__type__": "string",
		"__maximum__": 31,
		"__optional__": true
	},

	"suffix": {
		"__type__": "string",
		"__maximum__": 31,
		"__optional__": true
	},

	"phone_number": {
		"__type__": "string",
		"__regex__": "^(\\+[\\d \\(\\)-]{10,30}|[\\d \\(\\)-]{10,31})$",
		"__optional__": true
	},

	"phone_ext": {
		"__type__": "string",
		"__maximum__": 11,
		"__optional__": true
	},

	"verified": {
		"__type__": "bool",
		"__optional__": true
	}
}