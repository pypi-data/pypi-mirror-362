{"hat-controller://controller.yaml": {"$schema": "https://json-schema.org/draft/2020-12/schema", "$id": "hat-controller://controller.yaml", "title": "Controller", "type": "object", "required": ["units", "environments"], "properties": {"type": {"const": "controller", "description": "configuration type identification"}, "version": {"type": "string", "description": "component version"}, "log": {"$ref": "hat-json://logging.yaml"}, "units": {"type": "array", "items": {"$ref": "hat-controller://controller.yaml#/$defs/unit"}}, "environments": {"type": "array", "items": {"$ref": "hat-controller://controller.yaml#/$defs/environment"}}}, "$defs": {"unit": {"type": "object", "description": "structure of unit configuration depends on unit type\n", "required": ["module"], "properties": {"module": {"type": "string", "description": "full python module name that implements unit\n"}}}, "environment": {"type": "object", "required": ["name", "interpreter", "init_code", "actions"], "properties": {"name": {"type": "string"}, "interpreter": {"enum": ["CPYTHON", "DUKTAPE", "LUA", "QUICKJS"]}, "init_code": {"type": "string"}, "actions": {"type": "array", "items": {"$ref": "hat-controller://controller.yaml#/$defs/action"}}}}, "action": {"type": "object", "required": ["name", "triggers", "code"], "properties": {"name": {"type": "string"}, "triggers": {"type": "array", "items": {"$ref": "hat-controller://controller.yaml#/$defs/trigger"}}, "code": {"type": "string"}}}, "trigger": {"type": "object", "required": ["type", "name"], "properties": {"type": {"type": "string", "description": "type segments are delimited by \"/\"\n"}, "name": {"type": "string", "decription": "name segments are delimited by \"/\"\n"}}}}}, "hat-controller://units/log.yaml": {"$schema": "https://json-schema.org/draft/2020-12/schema", "$id": "hat-controller://units/log.yaml", "type": "object", "required": ["logger"], "properties": {"logger": {"type": "string"}}}, "hat-controller://units/os.yaml": {"$schema": "https://json-schema.org/draft/2020-12/schema", "$id": "hat-controller://units/os.yaml", "type": "object", "properties": {"thread_pool_size": {"type": "integer", "default": 5}}}, "hat-controller://units/timers.yaml": {"$schema": "https://json-schema.org/draft/2020-12/schema", "$id": "hat-controller://units/timers.yaml", "type": "object", "required": ["timezone", "timers"], "properties": {"timezone": {"type": "string", "description": "timezone identifier\n(e.g. https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)\n"}, "timers": {"type": "array", "items": {"type": "object", "required": ["name", "time", "auto_start", "repeat"], "properties": {"name": {"type": "string", "description": "name segments are delimited by \"/\"\n"}, "time": {"oneOf": [{"type": "number", "description": "relative timer duration in seconds\n"}, {"type": "string", "description": "absolute timer cron expression\n"}]}, "auto_start": {"type": "boolean"}, "repeat": {"type": "boolean"}}}}}}}