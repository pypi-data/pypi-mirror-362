<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="supplier_form_view" model="ir.ui.view">
            <field name="name">energy_project.supplier.form</field>
            <field name="model">energy_project.supplier</field>
            <field name="arch" type="xml">
                <form string="Supplier">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="nif" />
                                <field name="order" readonly="True" />
                                <field name="phone" />
                                <field name="portal" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="supplier_tree_view" model="ir.ui.view">
            <field name="name">energy_project.supplier.tree</field>
            <field name="model">energy_project.supplier</field>
            <field name="arch" type="xml">
                <tree string="Supplier" import="1" create="1">
                    <field name="nif" />
                    <field name="order" />
                    <field name="name" />
                    <field name="phone" />
                    <field name="portal" />
                </tree>
            </field>
        </record>

        <record id="supplier_act_window" model="ir.actions.act_window">
            <field name="name">Supplier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">energy_project.supplier</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are no energy supplier yet, click here to add a new one.
                </p>
            </field>
        </record>
    </data>
</odoo>
