<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="service_form_view" model="ir.ui.view">
            <field name="name">energy_project.service.form</field>
            <field name="model">energy_project.service</field>
            <field name="arch" type="xml">
                <form string="Energy Service">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="service_tree_view" model="ir.ui.view">
            <field name="name">energy_project.service.tree</field>
            <field name="model">energy_project.service</field>
            <field name="arch" type="xml">
                <tree string="Energy Services">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="service_act_window" model="ir.actions.act_window">
            <field name="name">Energy Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">energy_project.service</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are no energy services yet, click here to add a new one.
                </p>
            </field>
        </record>
    </data>
</odoo>
