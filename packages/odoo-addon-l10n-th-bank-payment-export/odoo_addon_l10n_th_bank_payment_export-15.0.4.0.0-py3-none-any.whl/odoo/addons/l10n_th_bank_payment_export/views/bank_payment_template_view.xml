<odoo>
    <record id="bank_payment_template_view_tree" model="ir.ui.view">
        <field name="name">bank.payment.template.view.tree</field>
        <field name="model">bank.payment.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="bank" />
                 <field name="journal_ids" widget="many2many_tags" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>
    <record id="bank_payment_template_view_form" model="ir.ui.view">
        <field name="name">bank.payment.template.view.form</field>
        <field name="model">bank.payment.template</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group name="left">
                            <field name="bank" />
                        </group>
                        <group name="right">
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field name="journal_ids" widget="many2many_tags" />
                        </group>
                    </group>
                    <notebook>
                        <page name="bank_payment_config" string="Config">
                            <field name="template_config_line">
                                <tree editable="bottom">
                                    <field name="field_id" />
                                    <field name="field_type" />
                                    <field name="value" />
                                </tree>
                            </field>
                        </page>
                        <page string="Help">
                            <group>
                                <div>
                                    <p>
                                        The bank payment export template allows for easy automatic configuration.
                                        Users can select their preferred template and modify the values as needed.
                                    </p>
                                    <p>
                                        For fields of the <code
                                        >many2one, many2many</code> types,<br />
                                        you can enter values using either the <b
                                        >ID</b> or the <b>Name</b> format.
                                    </p>
                                    <p>
                                        For <code
                                        >selection</code> fields, use the values displayed on the screen.
                                        To find the correct value, look for the text before the hyphen (-)
                                        <br />
                                        For example,
                                        if <b
                                        >Product Code</b> is a selection field with many options and you want to make a Direct Credit payment,<br
                                        />
                                        the system will display <b
                                        >DCP - Direct Credit</b> In this case, you should enter the value as <b
                                        >DCP</b>
                                    </p>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="bank_payment_template_view_search" model="ir.ui.view">
        <field name="name">bank.payment.template.view.search</field>
        <field name="model">bank.payment.template</field>
        <field name="arch" type="xml">
            <search string="Bank Payment Config">
                <field name="name" />
                <group expand="1" string="Group By">
                    <filter
                        string="Bank"
                        name="group_by_bank"
                        context="{'group_by': 'bank'}"
                    />
                    <filter
                        string="Company"
                        name="group_by_company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="action_bank_payment_template" model="ir.actions.act_window">
        <field name="name">Bank Payment Templates</field>
        <field name="res_model">bank.payment.template</field>
        <field name="view_id" ref="bank_payment_template_view_tree" />
    </record>
    <menuitem
        id="menu_bank_payment_template"
        action="action_bank_payment_template"
        parent="account.root_payment_menu"
        sequence="60"
    />
</odoo>
