import QtQuick 2.15


import Ros 2.0

Item {
    width: mainScreen.width
    height: mainScreen.height

    IntTopic {
        id: counterTopic
        topic: "/{{ id }}/my_counter"
    }

    IntentTopic {
        id: intentTopic
        topic: "/intents"
    }


    MainScreen {
        id: mainScreen

        // implement here the actions when user click the various buttons
        mainMenu.btn_3.onClicked: alert("**Hello!**<br/>I'm a custom modal to display **alert** messages")

        mainMenu.btn_4.onClicked: {
            counterTopic.value = 10;
            counterTopic.publish();
            alert("Value published to topic `" + counterTopic.topic + "`");
        }

        mainMenu.btn_5.onClicked: {
            intentTopic.value = "__intent_start_activity__";
            intentTopic.data = "{\"object\": \"sample_task_1\"}"
            intentTopic.publish();
            alert("Intent published to topic `" + intentTopic.topic + "` to start `sample_task_1`");
        }

        mainMenu.btn_6.onClicked: {
            intentTopic.value = "__intent_start_activity__";
            intentTopic.data = "{\"object\": \"unknown_task\"}"
            intentTopic.publish();
            alert("Intent published to topic `" + intentTopic.topic + "` to start `unknown_task`");
        }
    }

    function alert(msg) {
        mainScreen.alertModal.msg = msg;
        mainScreen.alertModal.visible = true;
    }

}
