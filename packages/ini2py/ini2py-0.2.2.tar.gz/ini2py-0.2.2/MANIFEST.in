# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include package data
recursive-include ini2py/templates *.tpl

# Include examples
recursive-include examples *.ini *.py *.md

# Include tests
recursive-include tests *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .pytest_cache

# Exclude generated test files
exclude test_output/
exclude temp_test_files/
exclude examples/*/generated/