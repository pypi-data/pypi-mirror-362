           g++ `fastjet-config --cxxflags --libs --plugins` -o ${a%.cc} $a
           tmp=`grep 'run it with.*[01].*<' $a | sed 's/.*://'`; cmd=($tmp)
           echo ${cmd[0]} | tee -a out; valgrind ${cmd[0]} < ${cmd[2]} >> out 2>&1
         done
