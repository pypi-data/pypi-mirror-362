<odoo>
    <record id="tnc_template_view_search" model="ir.ui.view">
        <field name="name">tnc_template - search</field>
        <field name="model">tnc_template</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="model_id" />
                <group name="group1">
                    <filter
                        name="dom_python"
                        string="Python Based Computation"
                        domain="[('computation_method','=','use_python')]"
                    />
                    <filter
                        name="dom_domain"
                        string="Domain Based Computation"
                        domain="[('computation_method','=','use_domain')]"
                    />
                </group>
                <group name="group2">
                    <filter
                        name="grp_model"
                        string="Model"
                        context="{'group_by':'model_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="tnc_template_view_tree" model="ir.ui.view">
        <field name="name">tnc_template - tree</field>
        <field name="model">tnc_template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="model_id" />
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record id="tnc_template_view_form" model="ir.ui.view">
        <field name="name">tnc_template - form</field>
        <field name="model">tnc_template</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <group name="group_1" colspan="4" col="2">
                        <group name="group_1_1" colspan="1" col="2">
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field name="name" />
                            <field name="model_id" />
                            <field name="model" />
                        </group>
                        <group name="group_1_2">
                            <field name="sequence" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                    </group>
                    <notebook>
                        <page
                            name="page_computation"
                            string="Computation"
                            invisible="1"
                        >
                            <group name="group_computation_1" colspan="4" col="2">
                                <field name="computation_method" colspan="4" />
                                <field
                                    name="domain"
                                    colspan="4"
                                    attrs="{'invisible': [('computation_method', '=', 'use_python')]}"
                                    widget="domain"
                                    options="{'model': 'model', 'in_dialog': True}"
                                />
                                <field
                                    name="python_code"
                                    colspan="4"
                                    widget="ace"
                                    attrs="{'invisible': [('computation_method', '=', 'use_domain')]}"
                                />
                            </group>
                        </page>
                        <page name="content" string="Content">
                            <separator string="Section" />
                            <field name="section_ids" />
                            <separator string="Clause" />
                            <field
                                name="clause_ids"
                                context="{'tree_view_ref': 'ssi_term_condition_mixin.tnc_template_clause2_tree', 'form_view_ref': 'ssi_term_condition_mixin.tnc_template_clause2_form'}"
                            />
                        </page>
                        <page name="page_note" string="Note">
                            <group name="group_note_1" colspan="4" col="2">
                                <field name="note" colspan="4" nolabel="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tnc_template_action" model="ir.actions.act_window">
        <field name="name">T&amp;C Templates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tnc_template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="tnc_template_menu"
        name="Templates"
        parent="menu_tnc_header"
        action="tnc_template_action"
        sequence="110"
    />

</odoo>
