<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_mail_activity_tree_helpdesk_ticket_page" model="ir.ui.view">
      <field name="name">mail.activity.tree.view.helpdesk.ticket.page</field>
      <field name="model">mail.activity</field>
      <field name="arch" type="xml">
          <tree string="Activity Tree" 
                decoration-danger="date_deadline &lt; current_date" 
                decoration-success="date_deadline == current_date"
                default_order='date_subject desc'>
              <field name="date_subject" class="date_subject_column"/>
              <field name="note" string="Contents" class="content_column"/>
              <field name="team_id" class="team_id_column"/>
              <field name="date_deadline" class="date_deadline_column"/>
              <button name="action_edit_activity" type="object" icon="fa-pencil" class="edit_button_column"/>
          </tree>
      </field>
  </record>
</odoo>