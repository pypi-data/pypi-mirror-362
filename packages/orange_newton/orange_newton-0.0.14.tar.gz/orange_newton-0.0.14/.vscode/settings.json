{
  "[python]": {
    // use black as Linter
    //"editor.defaultFormatter": "ms-python.black-formatter",
    // use ruff as Linter
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    // タブのサイズ
    "editor.tabSize": 4,
    // スペースでインデント
    "editor.insertSpaces": true,
    // 行末コードをLFに統一 (Gitでの改行コード問題回避)
    "files.eol": "\n",
    // 遅延して自動保存
    "files.autoSave": "afterDelay",
    // 自動保存の遅延時間 (ミリ秒)
    "files.autoSaveDelay": 1000,
    "diffEditor.ignoreTrimWhitespace": true
  },
  // use isort
  //"isort.args": ["--profile", "black"],
  //　blackの設定 1行は改行を含めて100 80は文字か過ぎる
  // black setting
  //"black-formatter.args": ["--line-length=80"],
  // Pylintの設定
  //"pylint.args": [
  // Google Code Style
  //"--rcfile=${workspaceFolder}/.vscode/pylintrc",
  //"--disable=missing-module-docstring"
  // "--disable=unused-variable"
  // "--disable=unused-import",
  // "--enable=unused-import"
  //],
  // 補完と型ヒント (Pylance)
  // Pylanceを言語サーバーとして使用 (デフォルトだが推奨)
  "python.languageServer": "Pylance",
  // 型チェックの厳しさ (off, basic, strict)
  "python.analysis.typeCheckingMode": "basic",
  // 未インポートのシンボルの自動補完
  "python.analysis.autoImportCompletions": true,

  // pylintの利用可否
  "pylint.enabled": false,

  // ruffの利用可否
  "ruff.enable": true,
  // ruffのlint可否
  "ruff.lint.enable": true,
  // ruffのpath設定

  // 推奨: ワークスペースの仮想環境のパスを指定
  // Python インタープリタのパスを明示的に指定
  // Windowsの場合
  //"python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
  // macOS/Linuxの場合
  //"python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // Windows GitBash
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  // Windowsのデフォルトターミナル
  //"terminal.integrated.defaultProfile.windows": "PowerShell",
  // cmd.exeの場合
  // "terminal.integrated.defaultProfile.windows": "Command Prompt",
  // Linux
  "terminal.integrated.defaultProfile.linux": "bash",
  // macOS Catalina以降
  "terminal.integrated.defaultProfile.osx": "zsh"
}
