<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_information_page">
        <page name="custom_information" string="Custom Information">
            <button
                name="action_reload_custom_info_template"
                string="Template"
                type="object"
                icon="fa-refresh"
                class="oe_highlight"
                style="margin-right:4px"
            />
            <button
                name="action_reload_custom_info"
                string="Custom Info"
                type="object"
                icon="fa-refresh"
                class="oe_highlight"
            />
            <group name="custom_info">
                <field name="custom_info_template_id" string="Template" />
            </group>
            <field name="custom_info_ids" colspan="4" nolabel="1" />
        </page>
    </template>
</odoo>
