<odoo>
    <data>
        <record id="helpdesk_ticket_tag_form" model="ir.ui.view">
            <field name="name">helpdesk.ticket.tag.form.inherit</field>
            <field name="model">helpdesk.ticket.tag</field>
            <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_tag_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main']" position="inside">
                    <field name="parent_id" domain="[('id', '!=', id)]"/>
                </xpath>
            </field>
        </record>

        <record id="heldesk_ticket_tag_tree" model="ir.ui.view">
            <field name="name">helpdesk.ticket.tag.tree.inherit</field>
            <field name="model">helpdesk.ticket.tag</field>
            <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_tag_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="display_name"/>
                    <field name="parent_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
