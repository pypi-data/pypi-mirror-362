<odoo>
    <!-- Basic view inheritable by real models -->
    <record model="ir.ui.view" id="endpoint_mixin_form_view">
        <field name="name">endpoint.mixin.form</field>
        <field name="model">endpoint.mixin</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <field name="active" invisible="1" />
                <field name="registry_sync" invisible="1" />
                <widget
                    name="web_ribbon"
                    title="Archived"
                    bg_color="bg-warning"
                    invisible="active"
                />
                <sheet>
                    <div
                        class="alert alert-warning"
                        role="alert"
                        invisible="registry_sync or not id"
                    >
                        <p>
                            Registry out of sync. Likely the record has been modified but not sync'ed with the routing registry.
                        </p>
                        <p>
                            Use the action "Sync registry" to make changes effective once you are done with edits and creates.
                        </p>
                    </div>
                    <div name="title" class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                        <label for="route" class="oe_edit_only" />
                        <h2>
                            <field name="route" />
                        </h2>
                    </div>
                    <notebook>
                        <page name="main" string="Main">
                            <group name="config1">
                                <group name="main">
                                    <field
                                        name="company_id"
                                        groups="base.group_multi_company"
                                    />
                                    <field name="route_group" />
                                    <field name="exec_mode" />
                                    <field
                                        name="exec_as_user_id"
                                        required="auth_type == 'public'"
                                    />
                                </group>
                                <group name="auth" string="Auth">
                                    <field name="auth_type" />
                                </group>
                            </group>
                            <group name="config2">
                                <group name="request" string="Request">
                                    <field name="request_method" />
                                    <field
                                        name="request_content_type"
                                        required="request_method in ('POST', 'PUT')"
                                        invisible="request_method not in ('POST', 'PUT')"
                                    />
                                </group>
                            </group>
                        </page>
                        <page name="code" string="Code" invisible="exec_mode != 'code'">
                            <field name="code_snippet" widget="ace" />
                        </page>
                        <page
                            name="code_help"
                            string="Code Help"
                            invisible="exec_mode != 'code'"
                        >
                            <field name="code_snippet_docs" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="endpoint_endpoint_form_view">
        <field name="name">endpoint.endpoint.form</field>
        <field name="model">endpoint.endpoint</field>
        <field name="inherit_id" ref="endpoint.endpoint_mixin_form_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form position="attributes">
                <!-- Needed just to make further inheritance happy -->
                <attribute name="name">real</attribute>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="endpoint_mixin_search_view">
        <field name="name">endpoint.mixin.search</field>
        <field name="model">endpoint.mixin</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="route" />
                <field name="exec_mode" />
                <field name="active" />
                <field name="registry_sync" />
                <filter
                    string="All"
                    name="all"
                    domain="['|', ('active', '=', False), ('active', '=', True)]"
                />
                <filter
                    string="To sync"
                    name="sync"
                    domain="[('registry_sync', '=', False), ('active', 'in', (True, False))]"
                />
                <separator />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="endpoint_endpoint_search_view">
        <field name="name">endpoint.endpoint.search</field>
        <field name="model">endpoint.endpoint</field>
        <field name="inherit_id" ref="endpoint.endpoint_mixin_search_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search position="attributes">
                <!-- Needed just to make further inheritance happy -->
                <attribute name="string" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="endpoint_mixin_list_view">
        <field name="name">endpoint.mixin.list</field>
        <field name="model">endpoint.mixin</field>
        <field name="arch" type="xml">
            <list
                decoration-muted="(not active)"
                decoration-warning="(not registry_sync)"
            >
                <field name="name" />
                <field name="route" />
                <field name="exec_mode" />
                <field name="active" widget="boolean_toggle" />
                <field name="registry_sync" />
            </list>
        </field>
    </record>

    <record model="ir.ui.view" id="endpoint_endpoint_tree_view">
        <field name="name">endpoint.endpoint.list</field>
        <field name="model">endpoint.endpoint</field>
        <field name="inherit_id" ref="endpoint.endpoint_mixin_list_view" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <list position="attributes">
                <!-- Needed just to make further inheritance happy -->
                <attribute name="string" />
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="endpoint_endpoint_act_window">
        <field name="name">Endpoints</field>
        <field name="res_model">endpoint.endpoint</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_all': 1}</field>
    </record>

    <record model="ir.ui.menu" id="endpoint_endpoint_menu">
        <field name="name">Endpoints</field>
        <field name="parent_id" ref="base.menu_custom" />
        <field name="action" ref="endpoint_endpoint_act_window" />
        <field name="sequence" eval="100" />
    </record>
</odoo>
