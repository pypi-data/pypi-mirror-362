import asyncio
import logging
from custom_gift_send import CustomGiftSend, Checklist, ChecklistTask

logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)

async def main():
    async with CustomGiftSend(logger=logger) as bot:
        # –û—Ç–ø—Ä–∞–≤–∫–∞ –ø–æ–¥–∞—Ä–∫–∞
        gifts = await bot.get_available_gifts()
        if gifts:
            await bot.send_gift(chat_id=123456, gift_id=gifts[0].id, text="–ü–æ–∑–¥—Ä–∞–≤–ª—è—é!")

        # –û—Ç–ø—Ä–∞–≤–∫–∞ —Å–ø–∏—Å–∫–∞ –∑–∞–¥–∞—á
        checklist = Checklist(title="–ó–∞–¥–∞—á–∏", tasks=[ChecklistTask(id=1, text="–ó–∞–¥–∞—á–∞ 1")])
        message = await bot.send_checklist(chat_id=123456, checklist=checklist)
        logger.info(f"–û—Ç–ø—Ä–∞–≤–ª–µ–Ω —Å–ø–∏—Å–æ–∫ –∑–∞–¥–∞—á: {message.message_id}")

        # –ü–æ–ª—É—á–µ–Ω–∏–µ –±–∞–ª–∞–Ω—Å–∞ Stars
        balance = await bot.get_star_balance()
        logger.info(f"–ë–∞–ª–∞–Ω—Å Stars: {balance}")

if __name__ == "__main__":
    asyncio.run(main())

API-—Å–ø—Ä–∞–≤–æ—á–Ω–∏–∫

send_gift(chat_id, gift_id, **kwargs): –û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç –ø–æ–¥–∞—Ä–æ–∫.
