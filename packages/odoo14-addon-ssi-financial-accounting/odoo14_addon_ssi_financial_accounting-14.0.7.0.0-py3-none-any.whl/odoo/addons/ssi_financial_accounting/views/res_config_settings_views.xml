<odoo>
<record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings form - Psychology</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="1" />
    <field name="inherit_id" ref="base.res_config_settings_view_form" />
    <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
            <div
                    class="app_settings_block"
                    data-string="Financial Accounting"
                    string="Financial Accounting"
                    data-key="ssi_financial_accounting"
                >
                <h2>Feature</h2>
                <div
                        class="row mt16 o_settings_container"
                        id="financial_accounting_feature"
                    >
                    <div
                            id="use_ssi_voucher_bank_cash"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_voucher_bank_cash_left"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_voucher_bank_cash" />
                        </div>
                        <div
                                name="use_ssi_voucher_bank_cash_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_voucher_bank_cash" />
                            <div class="text-muted">
                                Manage bank and cash voucher
                            </div>
                        </div>
                    </div>
                    <div
                            id="use_ssi_voucher_cheque"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_voucher_cheque_left"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_voucher_cheque" />
                        </div>
                        <div
                                name="use_ssi_voucher_cheque_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_voucher_cheque" />
                            <div class="text-muted">
                                Manage cheque voucher
                            </div>
                        </div>

                    </div>
                    <div
                            id="use_ssi_voucher_giro"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_voucher_giro_left"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_voucher_giro" />
                        </div>
                        <div
                                name="use_ssi_voucher_giro_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_voucher_giro" />
                            <div class="text-muted">
                                Manage giro voucher
                            </div>
                        </div>

                    </div>
                    <div
                            id="use_ssi_voucher_advance_settlement"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_voucher_advance_settlement_left"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_voucher_advance_settlement" />
                        </div>
                        <div
                                name="use_ssi_voucher_advance_settlement_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_voucher_advance_settlement" />
                            <div class="text-muted">
                                Manage advance settlement voucher
                            </div>
                        </div>

                    </div>
                    <div
                            id="use_ssi_voucher_refund_settlement"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_voucher_refund_settlement_left"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_voucher_refund_settlement" />
                        </div>
                        <div
                                name="use_ssi_voucher_refund_settlement_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_voucher_refund_settlement" />
                            <div class="text-muted">
                                Manage refund settlement voucher
                            </div>
                        </div>

                    </div>

                    <div
                            id="use_ssi_voucher_invoice_settlement"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_voucher_invoice_settlement_left"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_voucher_invoice_settlement" />
                        </div>
                        <div
                                name="use_ssi_voucher_invoice_settlement_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_voucher_invoice_settlement" />
                            <div class="text-muted">
                                Manage invoice settlement voucher
                            </div>
                        </div>

                    </div>

                    <div id="use_ssi_fixed_asset" class="col-12 col-lg-6 o_setting_box">
                        <div
                                name="use_ssi_fixed_asset_left"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_fixed_asset" />
                        </div>
                        <div
                                name="use_ssi_fixed_asset_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_fixed_asset" />
                            <div class="text-muted">
                                Manage fixed asset
                            </div>
                        </div>
                    </div>
                    <div
                            id="use_ssi_fixed_in_progress"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_fixed_in_progress_left"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_fixed_asset_in_progress" />
                        </div>
                        <div
                                name="use_ssi_fixed_asset_in_progress_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_fixed_asset_in_progress" />
                            <div class="text-muted">
                                Manage fixed asset in progress
                            </div>
                        </div>
                    </div>
                    <div
                            id="use_ssi_fixed_asset_disposal"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_fixed_asset_disposal"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_fixed_asset_disposal" />
                        </div>
                        <div
                                name="use_ssi_fixed_asset_disposal_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_fixed_asset_disposal" />
                            <div class="text-muted">
                                Manage fixed asset disposal
                            </div>
                        </div>
                    </div>
                    <div
                            id="use_ssi_fixed_asset_improvement"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_fixed_asset_improvement"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_fixed_asset_improvement" />
                        </div>
                        <div
                                name="use_ssi_fixed_asset_improvement_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_fixed_asset_improvement" />
                            <div class="text-muted">
                                Manage fixed asset improvement
                            </div>
                        </div>
                    </div>
                    <div
                            id="use_ssi_fixed_asset_estimation_change"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_fixed_asset_estimation_change"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_fixed_asset_estimation_change" />
                        </div>
                        <div
                                name="use_ssi_fixed_asset_estimation_change_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_fixed_asset_estimation_change" />
                            <div class="text-muted">
                                Manage fixed asset estimation change
                            </div>
                        </div>
                    </div>
                    <div
                            id="use_ssi_fixed_asset_complex"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_fixed_asset_complex"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_fixed_asset_complex" />
                        </div>
                        <div
                                name="use_ssi_fixed_asset_complex_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_fixed_asset_complex" />
                            <div class="text-muted">
                                Manage complex fixed asset
                            </div>
                        </div>
                    </div>

                    <div
                            id="use_ssi_account_amortization"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_account_amortization"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_account_amortization" />
                        </div>
                        <div
                                name="use_ssi_account_amortization_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_account_amortization" />
                            <div class="text-muted">
                                Manage prepaid expense &amp; deferred revenue amortization
                            </div>
                        </div>
                    </div>

                    <div
                            id="use_ssi_account_currency_revaluation"
                            class="col-12 col-lg-6 o_setting_box"
                        >
                        <div
                                name="use_ssi_account_currency_revaluation"
                                class="o_setting_left_pane"
                            >
                            <field name="module_ssi_account_currency_revaluation" />
                        </div>
                        <div
                                name="use_ssi_account_currency_revaluation_right"
                                class="o_setting_right_pane"
                            >
                            <label for="module_ssi_account_currency_revaluation" />
                            <div class="text-muted">
                                Manage currency revaluation
                            </div>
                        </div>
                    </div>

                </div>
                <h2>Integration</h2>
                <div
                        class="row mt16 o_settings_container"
                        id="financial_accounting_integration"
                    >
                </div>
            </div>
        </xpath>
    </field>
</record>

<record id="res_config_settings_action" model="ir.actions.act_window">
    <field name="name">Settings</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">res.config.settings</field>
    <field name="view_mode">form</field>
    <field name="target">inline</field>
    <field
            name="context"
        >{'module' : 'ssi_financial_accounting', 'bin_size': False}</field>
</record>

<menuitem
        id="res_config_settings_menu"
        name="Settings"
        parent="menu_financial_accounting_configuration"
        sequence="0"
        action="res_config_settings_action"
    />

<!-- Hide Original View -->
<record id="account.res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.account</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="40" />
    <field name="inherit_id" ref="base.res_config_settings_view_form" />
    <field name="active" eval="1" />
    <field name="groups_id" eval="[(6, 0, [ref('original_accounting_group')])]" />
</record>
</odoo>
