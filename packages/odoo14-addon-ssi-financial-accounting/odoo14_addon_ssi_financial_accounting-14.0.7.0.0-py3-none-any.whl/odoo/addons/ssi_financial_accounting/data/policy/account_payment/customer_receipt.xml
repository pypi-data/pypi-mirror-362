<odoo>
<data>
<record id="policy_template_customer_receipt" model="policy.template">
    <field name="name">Sales Receipt: Standard</field>
    <field name="model_id" ref="account.model_account_payment" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','account.payment'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result = document.payment_type == 'inbound'</field>
</record>

<!-- CONFIRM -->
<record
            id="policy_template_detail_customer_receipt_confirm"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_customer_receipt" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.payment'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="0" />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_financial_accounting.sale_receipt_validator_group')])]"
            />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if document.state == "draft":
    result = True
</field>
</record>
<!-- Mark as Sent -->
<record
            id="policy_template_detail_customer_receipt_mark_as_sent"
            model="policy.template_detail"
        >
    <field name="template_id" ref="policy_template_customer_receipt" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.payment'),('name','=','mark_as_sent_ok')]"
            />
    <field name="restrict_state" eval="0" />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False</field>
</record>

