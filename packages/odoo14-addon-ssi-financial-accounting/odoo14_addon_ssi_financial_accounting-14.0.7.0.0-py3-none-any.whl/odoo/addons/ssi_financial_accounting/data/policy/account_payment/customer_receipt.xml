    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_financial_accounting.sale_receipt_validator_group')])]"
            />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if document.state != "draft":
    result = True
</field>
</record>
</data>
</odoo>
