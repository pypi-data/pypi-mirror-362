<odoo>
<data noupdate="0">
<record id="policy_template_entry" model="policy.template">
    <field name="name">Entry: Standard</field>
    <field name="model_id" ref="account.model_account_move" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','account.move'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result = document.move_type == 'entry'</field>
</record>
<!-- POST -->
<record id="policy_template_detail_entry_post" model="policy.template_detail">
    <field name="template_id" ref="policy_template_entry" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.move'),('name','=','post_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','account.move'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_financial_accounting.journal_entry_validator_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>
<!-- REVERSE -->
<record id="policy_template_detail_entry_reverse" model="policy.template_detail">
    <field name="template_id" ref="policy_template_entry" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.move'),('name','=','reverse_entry_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','account.move'),('value','=','posted')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_financial_accounting.journal_entry_user_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>
<!-- CANCEL -->
<record id="policy_template_detail_entry_cancel" model="policy.template_detail">
    <field name="template_id" ref="policy_template_entry" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.move'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','account.move'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_financial_accounting.journal_entry_validator_group')])]"
            />
</record>
<!-- RESET TO DRAFT -->
<record id="policy_template_detail_entry_restart" model="policy.template_detail">
    <field name="template_id" ref="policy_template_entry" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.move'),('name','=','restart_ok')]"
            />
    <field name="restrict_state" eval="0" />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_financial_accounting.journal_entry_validator_group')])]"
            />
</record>
</data>
</odoo>
