<odoo>
<data noupdate="0">
<record id="policy_template_vendor_cn" model="policy.template">
    <field name="name">Vendor Credit Note: Standard</field>
    <field name="model_id" ref="account.model_account_move" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','account.move'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result = document.move_type == 'in_refund'</field>
</record>
<!-- CONFIRM -->
<record id="policy_template_detail_vendor_cn_confirm" model="policy.template_detail">
    <field name="template_id" ref="policy_template_vendor_cn" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.move'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','account.move'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
                name="group_ids"
                eval="[(6,0,[ref('ssi_financial_accounting.refund_validator_group')])]"
            />
    <field name="restrict_additional" eval="0" />
</record>
